<head>
	<meta charset="utf-8" />
	<title>{{ page.title }}</title>
	<meta name="keywords" content="{{ page.keywords }}" />
	<meta name="description" content="{{ page.description }}" />

	{% if site.favicon %}
		<link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
		<link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
	{% endif %}
	<meta name="viewport" content="width=device-width,initial-scale=1">

	<!-- Font Awesome Icons -->
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

	<!-- jQuery CDN -->
	<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

	{% include basekit.headScript %}
</head>
<body class="{{ page.backgroundClass }}">

	{% block content %}
	{% endblock %}

    {% include basekit.bodyScript %}

    <!-- jQuery CDN -->
	<!-- <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script> -->

	<!-- Menu Navigation Toggle -->
    <script>

    	// Toggles class open to display/hide the whole navigation
    	$( ".navigation-toggle" ).click(function() {
  			$( ".navigation-body" ).toggleClass( "open" );
		});

    	// Toggles class open to display/hide folders
		$( ".navigation-item.folder" ).each(function() {
			$( this ).click(function() {
	  			$( this ).toggleClass( "open" );
			});
		});
	</script>

	{% block scripts %}
	{% endblock %}

</body>
</html>
